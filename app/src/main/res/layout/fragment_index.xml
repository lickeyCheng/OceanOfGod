<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.lickey.asus.oceanofgod.Index_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#341E0D"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            app:image_scale_type="center_crop"
            android:layout_height="180dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#271405"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:src="@mipmap/ring"
                />

        <com.lickey.asus.oceanofgod.utils.MarqueeTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="19sp"
            />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#714C32"
            android:layout_marginTop="1dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备用网址"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#D0A13C"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ie"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="APP登录后缀：@788"
                android:textColor="#D0A13C"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/index_tv_time1"
                android:text="测速中"
                style="@style/text1_style"
                />
            <TextView
                android:id="@+id/index_tv_url1"
                style="@style/text2_style"
                />
            <Button
                android:id="@+id/index_bt_skip1"
                android:text="进入游戏"
                style="@style/button_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/index_tv_time2"
                android:text="测速中"
                style="@style/text1_style"
                />
            <TextView
                android:id="@+id/index_tv_url2"
                style="@style/text2_style"
                />
            <Button
                android:id="@+id/index_bt_skip2"
                android:text="进入游戏"
                style="@style/button_style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <TextView
                android:id="@+id/index_tv_time3"
                android:text="测速中"
                style="@style/text1_style"
                />
            <TextView
                android:id="@+id/index_tv_url3"
                style="@style/text2_style"
                />
            <Button
                android:id="@+id/index_bt_skip3"
                android:text="进入游戏"
                style="@style/button_style"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/index_fg_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:src="@mipmap/recharge"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#714C32"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/index_ll_iphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:background="@mipmap/ico_bg"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/apple_ico"
                    />

            <TextView
                android:text="游戏下载"
                style="@style/text3_style"
                android:layout_marginLeft="10dp"
                />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#714C32"
                />

            <LinearLayout
                android:id="@+id/index_ll_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:background="@mipmap/ico_bg"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/android_ico"
                    />

                <TextView
                    android:text="游戏下载"
                    style="@style/text3_style"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#714C32"
                />

            <LinearLayout
                android:id="@+id/index_ll_newplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@mipmap/ico_bg"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/tutorial_ico"
                    />

                <TextView
                    android:text="新手教程"
                    style="@style/text3_style"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#714C32"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            >

            <LinearLayout
                android:id="@+id/index_ll_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:background="@mipmap/ico_bg"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/member_ico"
                    />

                <TextView
                    android:text="会员注册"
                    style="@style/text3_style"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#714C32"
                />

            <LinearLayout
                android:id="@+id/index_ll_onlineserver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:background="@mipmap/ico_bg"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/service_ico"
                    />

                <TextView
                    android:text="在线客服"
                    style="@style/text3_style"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#714C32"
                />

            <LinearLayout
                android:id="@+id/index_ll_discountapply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@mipmap/ico_bg"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/activity_ico"
                    />

                <TextView
                    android:text="优惠申请"
                    style="@style/text3_style"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
